<% end -%>
<% if @for_alias_only_TBD then -%>
    add/remove:
      filters:
      - filtertype: *first*
        filter_element1: value1
        ...
        filter_elementN: valueN
      - filtertype: *second*
        filter_element1: value1
        ...
        filter_elementN: valueN
<% end -%>
    filters:
<% @filters.each do |filter| -%>
    - filtertype: <%= filter['filtertype'] %>
<% filter.tap{|x| x.delete('filtertype')}.sort.each do |key, value| -%>
      <%= key -%>: <%= value %>
<% end -%>
<% end -%>
